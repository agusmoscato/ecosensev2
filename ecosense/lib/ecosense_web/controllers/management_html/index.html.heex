<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      // Obtener conteo de nodos
      const nodesRes = await fetch('/api/nodes');
      const nodes = await nodesRes.json();
      document.getElementById('node-count').textContent = Array.isArray(nodes) ? nodes.length : 0;

      // Obtener conteo de sensores
      const sensorsRes = await fetch('/api/sensors');
      const sensors = await sensorsRes.json();
      document.getElementById('sensor-count').textContent = Array.isArray(sensors) ? sensors.length : 0;

      // Obtener conteo de registros (Ãºltimas 24 horas)
      const readingsRes = await fetch('/api/readings');
      const readings = await readingsRes.json();
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      const todayReadings = Array.isArray(readings) ? readings.filter(r => {
        const readingDate = new Date(r.created_at);
        readingDate.setHours(0, 0, 0, 0);
        return readingDate.getTime() === today.getTime();
      }).length : 0;
      document.getElementById('reading-count').textContent = todayReadings;
    } catch (error) {
      console.error('Error loading stats:', error);
    }
  });
</script>
